//========================================================
//   1 - Resets
//========================================================

*
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box

// Contain floats: h5bp.com/q
.clearfix:before, .clearfix:after
  content ""
  display table

.clearfix:after
  clear both

.clearfix
  *zoom 1

$mediaPalm = "(max-width: 480px)"
$mediaLap = "(min-width: 481px) and (max-width: 979px)"
$mediaDesktop = "(min-width: 980px)"
$mediaRetina = "(-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)"
$mediaHeight = "(min-height: 730px)"
$mediaCompact = "(max-width: 1140px)"

//========================================================
//   0 - Variables
//========================================================

$brandPink = white
$brandBlue = #295da8
$brandRed = #ef3e56
$brandYellow = #fdc131

.bg-pink
  background-color $brandPink
.bg-blue
  background-color $brandBlue
.bg-red
  background-color $brandRed
.bg-yellow
  background-color $brandYellow
  color #000000

//========================================================
//   1 - Typography
//========================================================

body
  background-color white
  padding 61px 3px 3px 3px
  margin 0
  font-family Arial, sans-serif

.container
  width 100%

input
button
  -webkit-appearance- none

@keyframes bob
  0%
    background-position 0 10px
  50%
    background-position 0
  100%
    background-position 0 10px

//========================================================
//   2 - Errors
//========================================================

.error
  text-align center
  font-weight 700
  font-family 'mostra-nuova', sans-serif
  h2
    font-size 5em
    color $brandRed
    margin-bottom 0
  h3
    font-size 2em
    margin-top 0
    color lighten($brandRed, 20%)
  a
    display inline-block
    &:link
    &:visited
      color black
    &:hover
      text-decoration none

//========================================================
//   2 - Nav
//========================================================

.nav-wrapper
  width 100%
  height 61px
  position: fixed
  top 0
  left 0
  z-index 999
  color #1e445f
  box-shadow 0px 5px 0px rgba(0,0,0,0.1)
  background-clip padding-box
  font-family "mostra-nuova"
  text-transform uppercase
  font-size 18px
  letter-spacing 2px

.hashtag
  font-family arial, sans-serif
  color #7d6731

.left
.middle
.right
  width 33.33%
  float left
  height 61px
  background-color #1e445f
.right
  a
    float right
    float right

.middle
  text-align center
  text-decoration none
  display block
  &:hover
    border-bottom 5px solid darken($brandYellow, 20%)

.fb-like
.twitter-share-button
  float right
  margin 9px 0 0 0

.fb-like
  margin 9px 10px 0 0

.refresh-wrapper
  font-size 11px
  display none
  float right
  clear none

.refresh_stream
.refresh-count
  display inline-block

.refresh-count
  margin 2px 8px

.refresh-text
  text-transform uppercase
  letter-spacing 2px

.refresh-button
  float left
  display inline-block
  margin-top 10px
  margin-left 3%

.now-button
  float left
  display inline-block
  margin-top 10px
  margin-left 3%

a.pick-date
  display block
  height 19px
  text-decoration none
  display inline-block
  margin-top 10px
  margin-left 3%
  height 36px

.header-links-wrapper
  font-size 13px
  text-decoration none
  letter-spacing 0
  float right
  clear right
  margin-top 4px
  a
    color #fff
    &:hover
      text-decoration none

//========================================================
//   3 - Generic Styles
//========================================================



.btn
  font-family 'brandon-grotesque'
  display inline-block
  padding 10px 15px 10px 15px
  border-radius 30px
  transition all .1s
  text-decoration none
  text-align center
  border none
  cursor pointer
  text-transform uppercase
  font-size 14px
  height 36px
  letter-spacing 0

.btn-white
  background-color #f5f5f5
  color $brandBlue
  box-shadow 0 1px #e3e3e3,0 7px #e3e3e3,0 -1px #e3e3e3
  &:hover
    background-color #ffffff
  &:active
    box-shadow 0 1px #e3e3e3,0 3px #e3e3e3,0 -1px #e3e3e3
    // margin-top 14px
.btn-lightblue
  background-color #1e445f
  position relative
  // margin-top 20px
  color white
  height 35px
  letter-spacing 1px
  padding 9px 20px 12px 20px
  margin 8px
.btn-blue
  background-color #0e2d41
  position relative
  // margin-top 20px
  color white
  height 35px
  letter-spacing 1px
  padding 9px 20px 12px 20px
  margin 13px
  &:hover
    background-color lighten(#173755, 10%)

  &:active
    box-shadow 0 1px #0b2136,0 3px #0b2136,0 -1px #0b2136
    margin-top 24px




.day
  width 150px
  height 150px
  background-color #0b2136
  margin 10px
  display block
  float left
  color white
  a
    color white






img
  opacity 0
  -moz-transition opacity 1.618s /* Firefox 4 */
  -webkit-transition opacity 1.618s /* Safari and Chrome */
  -o-transition opacity 1.618s
  transition opacity 1.618s
  .mpf-img
    opacity 1
.load-more
  width 150px
  height 50px
.play-butto
  width 100%
  height 100%
  display block
  position: absolute
  top 0
  pointer-events:none;
  background url('/img/play-button.png') no-repeat center

.whole-tag
  display inline
  text-decoration none
  span
    text-decoration none
    height: 51px;
    color transparent
    display: block;
    margin: -12px 50px 0 165px 
    background url('/img/hashtap-logo.png') no-repeat
.admin-title
  display none



// Bootstrap shit

.bootstrap-timepicker-widget table td a
  border 1px transparent solid
  width 100%
  display inline-block
  margin 0
  padding 8px 0
  outline 0
  color #333

.bootstrap-timepicker-hour
.bootstrap-timepicker-minute
.bootstrap-timepicker-meridian
  width 50px
  border none
  height 40px
  text-align center

.dropdown-menu
  right -3px
  height 139px
  top 50px
  border 3px solid rgba(0, 0, 0, 0.2)

.separator
  width 12px

.icon-chevron-down
.icon-chevron-up
  width 20px
  height 13px
  margin 0 auto
  background url('/img/icon-uparrow.png') no-repeat
  display block

.icon-chevron-down
  background url('/img/icon-downarrow.png') no-repeat

.red-boat
.blue-boat
  display none

@media $mediaPalm
  .play-button
    display none
  .nav-wrapper
    position absolute
    margin-bottom 30px
  .bestival-logo
    width 96%
    margin 10px auto
    background-size contain
    background-position center
  .left
    width 100%
    clear both
    float none
  .middle
    width 100%
    clear both
    float none
    span
      margin-top 23px
      display inline-block
    .hashtag.middle-tag
      margin-left 10px
    .tag.middle-tag
      margin-right 10px
  .right
    width 100%
    height 20px
    padding-right 20px
  .social-button
    display none
  .pop-up
    display none
  .image-wrapper
  .video-wrapper
    width 50%
    float left
    padding 0 2px
    margin 0 0 4px
    img
    video
      width 100%
      height auto
      display block
  .nav-wrapper
    height 107px
    background url('/img/header-background.png') 0 -108px
  body
    padding 170px 3px 3px 3px
  .date-picker-form
    width 90%
  .date-picker-form__dropdown-button
    float right
    width 39px
  .date-picker-form__submit
    margin 0
    float: left

  a.pick-date
    display none

  input
  select
    display block
    width 100%
    clear both

  .date-picker-form__input
  .input-append.bootstrap-timepicker
    width 100%
    clear both
    float left

  .date-picker-form__input
    margin-bottom 20px

  .date-picker-form__close
    float left
    width 100%
    margin 10px 0 10px 0

  .header-links-wrapper a
    margin 0 10px

.red-boat
.blue-boat
  z-index 998
  position fixed
  width 151px
  height 860px
  bottom -200px

@media $mediaHeight
  .red-boat
    left 0
    background url(/img/red-boat.png)
  .blue-boat
    right 0
    background url(/img/blue-boat.png)

@media $mediaLap
  .middle
    padding-top 6px
  .whole-tag
    display block
    font-size 12px
   .red-boat
  .blue-boat
    display none
  .logos-wrapper
    width 310px
    float left
    span
      float: left
      margin 0 10px
  .instagram-logo
    float: left
  .chaiwallahs-logo
    float left
  .fb-like
  .twitter-share-button
    display none !important
  .image-wrapper
  .video-wrapper
    width 33.33333333%
    float left
    padding 0 2px
    margin 0 0 4px
    img
    video
      width 100%
      display block
  .synth
    margin-top 23px
    margin-right 10px
  a.pick-date
    display none

  .header-links-wrapper a
    clear both
    float right
    margin 5px

@media $mediaDesktop
  .red-boat
  .blue-boat
    display block
  .image-stream
    padding 0 0px
  .social-button
    padding-right 20px
    float right
  .synth
  .bestival-instagram-link
    margin-right 27px
    &:hover
      text-decoration underline
  .middle
    padding-top 20px

  .hashtag.middle-tag
    margin-left 20px
  .tag.middle-tag
    margin-right 20px
  .image-wrapper
  .video-wrapper
    width 20%
    float left
    padding 0 2px
    margin 0 0 4px
    img
    video
      width 100%
      display block


@media $mediaCompact
  .middle span
    font-size 14px

@media $mediaRetina
  .bestival-logo
    background-image url('/img/bestival-logo@2x.png')
    background-size contain










