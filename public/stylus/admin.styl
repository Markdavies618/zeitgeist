$brandBlue = #295da8




.remove-image
  width 33px
  height 33px
  float left
  margin 18px
  background url('/img/icon-delete.png') no-repeat
  cursor pointer

.remove-user
  width 33px
  height 33px
  float left
  margin 18px 18px 18px 0
  background url('/img/icon-ban.png') no-repeat
  cursor pointer

.remove-user:hover
.remove-image:hover
  opacity 0.8

.image-wrapper
  cursor auto

.username
  margin-top 26px
  font-size 13px
  font-weight bold

.refresh-button
  display none

.ban-user
  display block
  height 19px
  text-decoration none
  display inline-block
  margin-top 10px
  margin-left 3%
  height 36px

.ban-user-form__username-input
  border none
  height 45px
  width 100%
  float left
  padding 0 15px
  margin-bottom 20px
  text-align center
  color #9ea0a1
  font-size 15px
  border-radius 8px
  border 3px solid #dce1e3
  transition all 0.3s
  &:focus
    outline none
    border 3px solid darken(#dce1e3, 10%)

.ban-user-form__submit
  height 37px
  font-family 'mostra-nuova'
  display inline-block
  padding 9px 15px 9px 15px
  margin 0 10px 0 10px
  border-radius 8px
  position relative
  transition all .1s
  text-decoration none
  text-align center
  border none
  cursor pointer
  text-transform uppercase
  font-size 14px
  letter-spacing 0
  background-color $brandBlue
  color #f5f5f5
  box-shadow 0 1px lighten($brandBlue, 20%),0 7px lighten($brandBlue, 10%),0 -1px lighten($brandBlue, 20%)
  &:hover
    background-color lighten($brandBlue, 10%)
  &:active
    box-shadow 0 1px lighten($brandBlue, 20%),0 3px lighten($brandBlue, 10%),0 -1px lighten($brandBlue, 20%)
    top 4px

.ban-user-form__close
  height 37px
  font-family 'mostra-nuova'
  display inline-block
  padding 10px 15px 9px 15px
  margin 0 10px 0 10px
  border-radius 8px
  position relative
  transition all .1s
  text-decoration none
  text-align center
  border none
  cursor pointer
  text-transform uppercase
  font-size 14px
  letter-spacing 0
  background-color $brandBlue
  color #f5f5f5
  box-shadow 0 1px lighten($brandBlue, 20%),0 7px lighten($brandBlue, 10%),0 -1px lighten($brandBlue, 20%)
  &:hover
    background-color lighten($brandBlue, 10%)
  &:active
    box-shadow 0 1px lighten($brandBlue, 20%),0 3px lighten($brandBlue, 10%),0 -1px lighten($brandBlue, 20%)
    top 4px

.admin-title
  display block
.whole-tag
  display none